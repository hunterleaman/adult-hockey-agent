{
  "name": "adult-hockey-agent",
  "version": "1.0.0",
  "description": "Monitoring agent for adult pick-up hockey registration at Extreme Ice Center",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/scheduler.js",
    "dev": "npm run build && node dist/scheduler.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm test -- --run",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clear-state": "rm -f data/state.json && echo 'State cleared'",
    "discover": "tsc && node dist/api-discovery.js",
    "fetch-events": "tsc && node dist/fetch-events.js",
    "fetch-availabilities": "tsc && node dist/fetch-availabilities.js"
  },
  "keywords": [
    "hockey",
    "registration",
    "monitoring"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.3.0",
    "express": "^5.2.1",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
