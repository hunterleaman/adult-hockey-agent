{
  "name": "adult-hockey-agent",
  "version": "1.0.0",
  "description": "Monitoring agent for adult pick-up hockey registration at Extreme Ice Center",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && node dist/index.js",
    "start": "node dist/index.js",
    "discover": "tsc && node dist/api-discovery.js",
    "fetch-events": "tsc && node dist/fetch-events.js",
    "fetch-availabilities": "tsc && node dist/fetch-availabilities.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": ["hockey", "registration", "monitoring"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^17.3.0",
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
